#include "App.xcconfig"

PRODUCT_NAME = $(APP_NAME)

SDKROOT = appletvos
TVOS_DEPLOYMENT_TARGET = 9.0
INFOPLIST_FILE = $SRCROOT/xbmc/platform/darwin/tvos/Info.plist

ASSETCATALOG_COMPILER_LAUNCHIMAGE_NAME = LaunchImage
ASSETCATALOG_COMPILER_APPICON_NAME = AppIconTopShelfImage

ARCHS = arm64
VALID_ARCHS = arm64
ONLY_ACTIVE_ARCH = YES

EXECUTABLE_SUFFIX = .bin
XBMC_DEPENDS = $(XBMC_DEPENDS_ROOT)/$(SDK_NAME)_$(CURRENT_ARCH)-target
INSTALL_PATH = $(HOME)/Library/Bundles

ENABLE_BITCODE=YES
GCC_INLINES_ARE_PRIVATE_EXTERN = NO
GCC_SYMBOLS_PRIVATE_EXTERN = NO
COPY_PHASE_STRIP = NO
DEAD_CODE_STRIPPING = NO
OTHER_CPLUSPLUSFLAGS = $(inherited) $(OTHER_CFLAGS) -Wreorder

OTHER_LDFLAGS = $(XBMC_OTHER_LDFLAGS_COMMON)
LD_RUNPATH_SEARCH_PATHS = $(inherited) @executable_path/Frameworks

GCC_PREPROCESSOR_DEFINITIONS = TARGET_DARWIN_IOS TARGET_DARWIN_TVOS $(inherited)
CODE_SIGN_ENTITLEMENTS = xbmc/platform/darwin/tvos/Kodi.entitlements
